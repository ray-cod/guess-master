<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="dialogRoot" prefHeight="640.0" prefWidth="1000.0" stylesheets="@../styles/round-dialog.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.guessing.gamemaster.controllers.PostRoundDialogController">
   <children>
      <Region fx:id="backdrop" styleClass="dialog-backdrop" />
      <VBox fx:id="card" alignment="TOP_CENTER" maxWidth="780.0" prefHeight="200.0" prefWidth="720.0" spacing="16.0" styleClass="dialog-card">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="52.0" prefWidth="716.0">
               <children>
                  <Region prefHeight="81.0" prefWidth="691.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="closeButton" mnemonicParsing="false" onAction="#onCloseDialog" styleClass="icon-close" text="x" />
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="145.0" prefWidth="716.0" spacing="8.0">
               <children>
                  <ImageView fx:id="resultIcon" fitHeight="72.0" fitWidth="72.0" pickOnBounds="true" preserveRatio="true" />
                  <Label fx:id="resultLabel" styleClass="dialog-title" text="Correct! You Win!" />
                  <Label fx:id="subtitleLabel" styleClass="dialog-subtitle" text="Great job! Fast and accurate." />
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="18.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="summary-label" text="Points earned" />
                        <Label fx:id="pointsLabel" styleClass="points-value" text="+12" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="summary-label" text="Total score" />
                        <Label fx:id="totalLabel" styleClass="total-value" text="88" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="summary-label" text="Attempts" />
                        <Label fx:id="attemptsLabel" styleClass="muted" text="3 / 10" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label styleClass="summary-label" text="Time" />
                        <Label fx:id="timeLabel" styleClass="muted" text="00:24" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <TitledPane fx:id="breakdownPane" animated="false" expanded="false" prefWidth="680.0" text="Round breakdown">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox layoutX="14.0" layoutY="5.0" prefHeight="171.0" prefWidth="305.0" spacing="6.0">
                           <children>
                              <Label fx:id="breakdownLabel" text="Points calculation: base + bonus - penalties" wrapText="true" />
                           </children>
                           <padding>
                              <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </TitledPane>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="12.0">
               <children>
                  <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextRound" styleClass="btn-primary" text="Next Round" />
                  <Button fx:id="replayButton" mnemonicParsing="false" onAction="#onReplayRound" styleClass="btn-ghost" text="Replay Round" />
                  <Button fx:id="leaderboardButton" mnemonicParsing="false" onAction="#openLeaderboard" styleClass="btn-ghost" text="Leaderboard" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="72.0" prefWidth="716.0" spacing="8.0">
               <children>
                  <Button fx:id="shareButton" mnemonicParsing="false" styleClass="icon-btn" text="Share" />
                  <Region prefHeight="84.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#openMainMenu" styleClass="icon-btn" text="Main Menu" />
               </children>
            </HBox>
            <Label fx:id="footerNote" text="Press Enter to continue or Esc to close">
               <styleClass>
                  <String fx:value="muted" />
                  <String fx:value="small" />
               </styleClass>
            </Label>
         </children>
      </VBox>
   </children>
</StackPane>
